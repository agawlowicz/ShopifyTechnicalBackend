@model Product

<h2>Update @Model.Name</h2>

@using (Html.BeginForm("UpdateProductToDatabase", "Product", "Post"))
{
    <input asp-for="ProductID" type="hidden" value="@Model.ProductID" />

    <label asp-for="Name" class="control-label">Name</label>
    <input type="text" name="Name" class="form-control" value="@Model.Name" />

    <label asp-for="Cost" class="control-label">Cost</label>
    <input type="number" step="0.01" name="Cost" class="form-control" value="@Model.Cost" />

    <label asp-for="Stock" class="control-label">Stock</label>
    <input type="number" step="0.01" name="Stock" class="form-control" value="@Model.Stock" />

    <input type="submit" value="Update Product" class="btn btn-primary" />
}