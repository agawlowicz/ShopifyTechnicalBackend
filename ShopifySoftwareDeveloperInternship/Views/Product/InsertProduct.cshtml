@model Product

<h2>Create a New Product</h2>

@using (Html.BeginForm("InsertProductToDatabase", "Product", "Post"))
{

    <label asp-for="Name" class="control-label">Name</label>
    <input type="text" name="Name" class="form-control" value="" />

    <label asp-for="Cost" class="control-label">Cost</label>
    <input type="number" step="0.01" name="Cost" class="form-control" />

    <label asp-for="Stock" class="control-label">Stock</label>
    <input type="number" step="1" name="Stock" class="form-control" />

    <input type="submit" value="Create Product" class="btn btn-primary" />
}